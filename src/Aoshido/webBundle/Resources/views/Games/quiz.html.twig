{% extends 'AoshidowebBundle:Games:settings.html.twig' %}

{% block title %}Quiz! {% endblock %}
{% block section %}Quiz! {% endblock %}
{% block games_contenido %} 
    {% form_theme form 'AoshidowebBundle:Themes:field-prototype.html.twig' %}
    <div class="container col-md-12">

        <div class="panel panel-primary">
            <div class="panel-heading">Elegir Temas</div>

            <div class="panel-body">
                {{ form_start(form,{ 'attr': {'class': 'form-horizontal'} })}}
                   {{ form_errors(form)}}
                

                <div class="form-group">
                    {{ form_label(form.carrera,null,{ 'label_attr' : { 'class' : 'col-md-2 control-label' } }) }}
                    {{ form_errors(form.carrera) }}
                    <div id="anchor" class="col-md-6">
                        {{ form_widget(form.carrera,{ 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_errors(form.materia) }}
                    {{ form_label(form.materia,null,{ 'label_attr' : { 'class' : 'col-md-2 control-label' } }) }}
                    <div class="col-md-6">
                        {{ form_widget(form.materia,{ 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>    

                <div class="form-group">
                    {{ form_errors(form.temas) }}
                    {{ form_label(form.temas,null,{ 'label_attr' : { 'class' : 'col-md-2 control-label' } }) }}
                    <div class="col-md-6">
                        {{ form_widget(form.temas,{ 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div> 

                <div class="form-group">
                    <div id="anchor" class="col-md-offset-2 col-md-4">
                        {{ form_widget(form.save,{ 'label': 'Guardar Cambios' , 'attr': {'class': 'btn btn-success'} }) }}
                    </div>
                    {{ form_row(form._token) }}
                    {{ form_end(form, {'render_rest': false}) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %} 
    {{ parent() }}

    <script type="text/javascript">
        $(".btn-danger").popConfirm({
            title: "Borrar Pregunta",
            content: "Â¿Seguro que desea borrar la pregunta?",
            placement: "right",
            yesBtn: "Si",
            noBtn: "No"
        });
    </script>

    <script type="text/javascript">
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>

    <script type="text/javascript">
        $("select[id$='carrera']").change(function () {
            var data = {
                idcarrera: $(this).val()
            };

            $.ajax({
                type: 'post',
                url: '{{ path("preguntas_addMateria") }}',
                data: data,
                success: function (data) {
                    var $materia_selector = $("select[id$='materia']");

                    $materia_selector.html('<option value="">- Seleccione Materia -</option>');

                    for (var i = 0, total = data.length; i < total; i++) {
                        $materia_selector.append('<option value="' + data[i].id + '">' + data[i].descripcion + ' </option>');
                    }
                }
            });
        });
    </script>

    <script type="text/javascript">
        $("select[id$='materia']").change(function () {
            var data = {
                idmateria: $(this).val()
            };

            $.ajax({
                type: 'post',
                url: '{{ path("preguntas_addTemas") }}',
                data: data,
                success: function (data) {
                    var tema_selector = $("select[id$='temas']");

                    tema_selector.html('<option value="">- Seleccione Tema -</option>');

                    for (var i = 0, total = data.length; i < total; i++) {
                        tema_selector.append('<option value="' + data[i].id + '">' + data[i].descripcion + ' </option>');
                    }
                }
            });
        });
    </script>
{% endblock %}