<div class="panel panel-primary">
    <div class="panel-heading">{% if form.vars.method == 'PATCH'%} Editar {%else%} Agregar {%endif%} Respuestas</div>
    <div class="panel-body">
        {{ form_start(form,{ 'attr': {'class': 'form-horizontal'} })}}

        <div class="form-group">
            {{ form_errors(form)}}
            {{ form_errors(form.contenido) }}
            {{ form_label(form.contenido,null,{ 'label_attr' : { 'class' : 'col-sm-2 control-label' } })}}
            <div id="anchor" class="col-sm-10">
                {{ form_widget(form.contenido,{ 'attr' : { 'class' : 'form-control' } }) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.correcta,null,{ 'label_attr' : { 'class' : 'col-sm-2 control-label' } })}}
            <div class="col-sm-10 btn-group " data-toggle="buttons">
                {% for key,choice in form.correcta.vars.choices %}
                    <label class="btn btn-primary {% if choice.value == form.correcta.vars.value %}active{% endif %}">
                        <input type="radio" id="{{ form.correcta.vars.id }}_{{ key }}" {% if choice.value == form.correcta.vars.value %}checked{% endif %}
                               autocomplete="off" name="{{ form.correcta.vars.full_name }}" value="{{ choice.value }}">
                        {{ choice.label }}
                    </label>
                {% endfor %}
            </div>
        </div>

        <div class="form-group text-center">
            <div id="anchor" class="col-sm-12 ">
                {{ form_widget(form.save,{ 'attr': {'class': 'btn btn-success' }  } ) }}
            </div>
            {{ form_row(form._token) }}
            {{ form_end(form, {'render_rest': false}) }}
        </div>
    </div>
</div>