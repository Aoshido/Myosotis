<div class="modal fade" tabindex="-1" role="dialog" id="myModal-add">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header-blue">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">{% if form.vars.method == 'PATCH'%} Editar {%else%} Agregar {%endif%} Preguntas</h4>
            </div>

            {{ form_start(form,{ 'attr': {'class': 'form-horizontal'} })}}

            <div class="modal-body">
                <div class="form-group">
                    {{ form_errors(form)}}
                    {{ form_errors(form.contenido) }}
                    {{ form_label(form.contenido,null,{ 'label_attr' : { 'class' : 'col-sm-2 control-label' } })}}

                    <div id="anchor" class="col-sm-10">
                        {{ form_widget(form.contenido,{ 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.carrera,null,{ 'label_attr' : { 'class' : 'col-sm-2 control-label' } }) }}
                    {{ form_errors(form.carrera) }}
                    <div id="anchor" class="col-sm-10">
                        {{ form_widget(form.carrera,{ 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_errors(form.materia) }}
                    {{ form_label(form.materia,null,{ 'label_attr' : { 'class' : 'col-sm-2 control-label' } }) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.materia,{ 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>    

                <div class="form-group">
                    {{ form_errors(form.temas) }}
                    {{ form_label(form.temas,null,{ 'label_attr' : { 'class' : 'col-sm-2 control-label' } }) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.temas,{ 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>    

            </div>
            <div class="modal-footer">
                <div class="form-group text-center">
                    <div id="anchor" class="col-sm-12">
                        {{ form_widget(form.save,{ 'attr': {'class': 'btn btn-success'} }) }}
                    </div>
                </div>
            </div>
            {{ form_row(form._token) }}
            {{ form_end(form, {'render_rest': false}) }}
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->