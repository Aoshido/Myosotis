<div class="modal fade" tabindex="-1" role="dialog" id="myModal-search">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header-blue">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Filtrar preguntas</h4>
            </div>
            {{ form_start(fullSearchForm,{ 'attr': {'class': 'form-horizontal' , 'action': path("fos_user_security_check")} })}}
            {{ form_errors(fullSearchForm)}}
            <div class="modal-body">
                <div class="form-group">
                    {{ form_errors(fullSearchForm.carrera) }}
                    {{ form_label(fullSearchForm.carrera,null,{ 'label_attr' : { 'class' : 'col-sm-2 control-label' } }) }}
                    <div id="anchor" class="col-sm-10">
                        {{ form_widget(fullSearchForm.carrera,{ 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_errors(fullSearchForm.materia) }}
                    {{ form_label(fullSearchForm.materia,null,{ 'label_attr' : { 'class' : 'col-sm-2 control-label' } }) }}
                    <div class="col-sm-10">
                        {{ form_widget(fullSearchForm.materia,{ 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>    

                <div class="form-group">
                    {{ form_errors(fullSearchForm.temas) }}
                    {{ form_label(fullSearchForm.temas,null,{ 'label_attr' : { 'class' : 'col-sm-2 control-label' } }) }}
                    <div class="col-sm-10">
                        {{ form_widget(fullSearchForm.temas,{ 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div> 
            </div>
            <div class="modal-footer">
                <div class="form-group text-center">
                    <div id="anchor" class="col-sm-12">
                        {{ form_widget(fullSearchForm.save,{ 'label': 'Filtrar' , 'attr': {'class': 'btn btn-success'} }) }}
                    </div>
                </div>
            </div>
            {{ form_row(fullSearchForm._token) }}
            {{ form_end(fullSearchForm, {'render_rest': false}) }}
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->