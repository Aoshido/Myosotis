{% extends sonata_block.templates.block_base %}

{% block block %}
    <div class="box">
        <div class="box-header grad_vertical2">
            <h3 class="box-title">Usuarios con mas preguntas</h3>
        </div>

        <div class="box-body grad_box">
            <table class="table table-condensed">
                <div class="row">
                    {% for user in users %}
                        <div class="col-xs-4">
                            <div class="well well-xs">
                                <a class="thumbnail pull-left" href="#" style="margin-right: 10px;">
                                    <img alt="" style="max-height: 100px; max-width: 100px;" src="{% image '@AoshidowebBundle/img/bichi.jpg' %} {{ asset_url }} {% endimage %}">
                                </a>
                                <div class="media-body">
                                    <h4 class="media-heading">{{user.username}}</h4>
                                    <p><span class="label label-info">{{user.PreguntasCreadas}} Preguntas</span> <span class="label label-primary">Level {{user.level}} </span></p>
                                    <p>
                                        <a href="{{path('admin_aoshido_user_user_edit', {'id': user.id })}}" class="btn btn-xs btn-default"><i class="fa fa-pencil" aria-hidden="true"></i> Editar</a>
                                        <a href="{{path('admin_aoshido_user_user_delete', {'id': user.id })}}" class="btn btn-xs btn-default"><i class="fa fa-ban" aria-hidden="true"></i> Eliminar</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </table>
        </div>
    </div>

{% endblock block %}