{% extends sonata_block.templates.block_base %}

{% block block %}
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Usuarios con mas preguntas</h3>
        </div>

        <div class="box-body">
            <table class="table table-condensed">
                {% for user in users %}
                    <tr>
                        <td>
                            <div class="progress">
                                <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: {{(user.PreguntasCreadas / total) * 100|number_format(0, '.', ',')}}%;">
                                    <span class="sr-only">{{(user.PreguntasCreadas / total) * 100|number_format(0, '.', ',')}}% Preguntas</span>
                                </div>
                                <span class="progress-type">{{ user.username }} {{ user.PreguntasCreadas }}</span>
                                <span class="progress-completed">{{(user.PreguntasCreadas / total) * 100|number_format(0, '.', ',')}}%</span>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>

    {% endblock block %}