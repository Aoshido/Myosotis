<div class="panel panel-primary">
    <div class="panel-heading">{% if form.vars.method == 'PATCH'%} Editar {%else%} Agregar {%endif%} Temas</div>

    <div class="panel-body">
        {{ form_start(form,{ 'attr': {'class': 'form-horizontal'} })}}
        {{ form_errors(form)}}

        <div class="form-group">
            {{ form_label(form.carrera,null,{ 'label_attr' : { 'class' : 'col-sm-2 control-label' } }) }}
            {{ form_errors(form.carrera) }}
            <div id="anchor" class="col-sm-10">
                {{ form_widget(form.carrera,{ 'attr' : { 'class' : 'form-control' } }) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_errors(form.materia) }}
            {{ form_label(form.materia,null,{ 'label_attr' : { 'class' : 'col-sm-2 control-label' } }) }}
            <div class="col-sm-10">
                {{ form_widget(form.materia,{ 'attr' : { 'class' : 'form-control' } }) }}
            </div>
        </div>    


        <div class="form-group">
            {{ form_label(form.descripcion,null,{ 'label_attr' : { 'class' : 'col-sm-2 control-label' } })}}
            <div id="anchor" class="col-sm-10">
                {{ form_widget(form.descripcion,{ 'attr' : { 'class' : 'form-control' } }) }}
            </div>
        </div>

        <div class="form-group text-center">
            <div class="col-sm-12">
                {{ form_widget(form.save,{ 'attr': {'class': 'btn btn-success'} }) }}
            </div>
            {{ form_row(form._token) }}
            {{ form_end(form, {'render_rest': false}) }}
        </div>
    </div>
</div>