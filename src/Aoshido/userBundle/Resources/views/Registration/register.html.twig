{% extends "AoshidouserBundle::layout_complete.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
<div class="jumbotron alpha60">
    <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register form-horizontal">

        {{ form_widget(form._token) }}

        {{ form_errors(form.username) }}
        <div class="form-group">
            {{ form_label(form.username,null,{ 'label_attr' : { 'class' : 'col-md-2 control-label' } }) }}
            <div id="anchor" class="col-md-6">
                {{ form_widget(form.username,{ 'attr' : { 'class' : 'form-control' } }) }}
            </div>
        </div>

        {{ form_errors(form.plainPassword.first) }}
        <div class="form-group">
            {{ form_label(form.plainPassword.first,null,{ 'label_attr' : { 'class' : 'col-md-2 control-label' } }) }}

            <div id="anchor" class="col-md-6">
                {{ form_widget(form.plainPassword.first,{ 'attr' : { 'class' : 'form-control' } }) }}
            </div>
        </div>

        {{ form_errors(form.plainPassword.second) }}
        <div class="form-group">
            {{ form_label(form.plainPassword.second,null,{ 'label_attr' : { 'class' : 'col-md-2 control-label' } }) }}
            <div id="anchor" class="col-md-6">
                {{ form_widget(form.plainPassword.second,{ 'attr' : { 'class' : 'form-control' } }) }}
            </div>
        </div>

        {{ form_errors(form.email) }}
        <div class="form-group">
            {{ form_label(form.email,null,{ 'label_attr' : { 'class' : 'col-md-2 control-label' } }) }}
            <div id="anchor" class="col-md-6">
                {{ form_widget(form.email,{ 'attr' : { 'class' : 'form-control' } }) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-4">
                <input class="btn btn-success" type="submit" value="{{ 'registration.submit'|trans }}" />
            </div>
        </div>
    </form>
</div>



